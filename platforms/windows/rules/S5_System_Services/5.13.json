{
    "rule_id": "5.13",
    "title": "Ensure 'Print Spooler (Spooler)' is set to 'Disabled'",
    "description": "This policy setting ensures the target service is disabled.",
    "cis_level": 2,
    "category": "System Services",
    "applies_to": [
        "Windows 11",
        "Windows 10",
        "Windows Server 2022",
        "Windows Server 2019",
        "Windows Server 2016"
    ],
    "automated": true,
    "registry_config": {
        "path": "HKLM:\\System\\CurrentControlSet\\Services\\Spooler",
        "value_name": "Start",
        "value_type": "REG_DWORD",
        "value_data": 4,
        "comparison": "equals"
    },
    "gpo_config": {
        "policy_path": "Computer Configuration\\Policies\\Windows Settings\\Security Settings\\System Services",
        "setting_name": "Print Spooler",
        "setting_value": "Disabled",
        "admx_category": "SystemServices"
    },
    "implementation_local": {
        "powershell_command": "Set-Service -Name 'Spooler' -StartupType Disabled -ErrorAction SilentlyContinue",
        "powershell_script": "if (Get-Service -Name 'Spooler' -ErrorAction SilentlyContinue) { Set-ItemProperty -Path 'HKLM:\\System\\CurrentControlSet\\Services\\Spooler' -Name 'Start' -Value 4 -Type DWord -Force }",
        "requires_admin": true,
        "requires_reboot": false
    },
    "implementation_gpo": {
        "inf_section": "[Service General Setting]",
        "inf_key": "Spooler",
        "inf_value": "4,",
        "gpo_xml": ""
    },
    "audit_logic": {
        "powershell_script": "$svc = Get-Service -Name 'Spooler' -ErrorAction SilentlyContinue; if (-not $svc) { return $true }; return ($svc.StartType -eq 'Disabled')",
        "expected_result": true
    },
    "remediation_rollback": {
        "powershell_command": "Set-Service -Name 'Spooler' -StartupType Manual -ErrorAction SilentlyContinue",
        "original_value": 3
    },
    "impact": {
        "severity": "medium",
        "description": "Disabling this service may limit system functionality. Review usage before applying."
    },
    "rationale": "Unnecessary services increase the attack surface of the system. Disabling them minimizes vulnerabilities.",
    "default_value": {
        "standalone": "Varies",
        "domain_joined": "Varies"
    },
    "references": [
        "https://www.cisecurity.org/benchmark/microsoft_windows_desktop/"
    ],
    "tags": [
        "system-services",
        "cis",
        "security",
        "level-2"
    ]
}