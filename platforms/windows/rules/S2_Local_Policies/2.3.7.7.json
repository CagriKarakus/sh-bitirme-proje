{
    "rule_id": "2.3.7.7",
    "title": "Ensure 'Interactive logon: Prompt user to change password before expiration' is set to 'between 5 and 14 days'",
    "description": "This policy setting evaluates the security options.",
    "cis_level": 1,
    "category": "Local Policies",
    "subcategory": "Security Options",
    "applies_to": [
        "Windows 11",
        "Windows 10",
        "Windows Server 2022",
        "Windows Server 2019",
        "Windows Server 2016"
    ],
    "automated": true,
    "registry_config": {
        "path": "HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Policies\\System",
        "value_name": "PasswordExpiryWarning",
        "value_type": "REG_DWORD",
        "value_data": 14,
        "comparison": "less_than_or_equal"
    },
    "gpo_config": {
        "policy_path": "Computer Configuration\\Policies\\Windows Settings\\Security Settings\\Local Policies\\Security Options",
        "setting_name": "Ensure 'Interactive logon: Prompt user to change password before expiration' is set to 'between 5 and 14 days'",
        "setting_value": "Enabled",
        "admx_category": "SecurityOptions"
    },
    "implementation_local": {
        "powershell_command": "Set-ItemProperty -Path 'HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Policies\\System' -Name 'PLACEHOLDER' -Value 1 -Type DWord -Force",
        "powershell_script": "Set-ItemProperty -Path 'HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Policies\\System' -Name 'PasswordExpiryWarning' -Value 14 -Type DWord -Force",
        "requires_admin": true,
        "requires_reboot": false
    },
    "implementation_gpo": {
        "inf_section": "[Registry Values]",
        "inf_key": "MACHINE\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Policies\\System\\PasswordExpiryWarning",
        "inf_value": "4,14",
        "gpo_xml": "<RegistryValue name='PasswordExpiryWarning' type='REG_DWORD' value='14'/>"
    },
    "audit_logic": {
        "powershell_script": "$val = (Get-ItemProperty -Path 'HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Policies\\System' -Name 'PasswordExpiryWarning' -ErrorAction SilentlyContinue).PasswordExpiryWarning; return ($val -ge 5 -and $val -le 14)",
        "expected_result": true
    },
    "remediation_rollback": {
        "powershell_command": "Remove-ItemProperty -Path 'HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Policies\\System' -Name 'PasswordExpiryWarning' -Force",
