{
    "rule_id": "2.3.9.1",
    "title": "Ensure 'Microsoft network server: Amount of idle time required before suspending session' is set to '15 or fewer minute(s)'",
    "description": "This policy setting evaluates the security options.",
    "cis_level": 1,
    "category": "Local Policies",
    "subcategory": "Security Options",
    "applies_to": [
        "Windows 11",
        "Windows 10",
        "Windows Server 2022",
        "Windows Server 2019",
        "Windows Server 2016"
    ],
    "automated": true,
    "registry_config": {
        "path": "HKLM:\\System\\CurrentControlSet\\Services\\LanManServer\\Parameters",
        "value_name": "autodisconnect",
        "value_type": "REG_DWORD",
        "value_data": 15,
        "comparison": "less_than_or_equal"
    },
    "gpo_config": {
        "policy_path": "Computer Configuration\\Policies\\Windows Settings\\Security Settings\\Local Policies\\Security Options",
        "setting_name": "Ensure 'Microsoft network server: Amount of idle time required before suspending session' is set to '15 or fewer minute(s)'",
        "setting_value": "Enabled",
        "admx_category": "SecurityOptions"
    },
    "implementation_local": {
        "powershell_command": "Set-ItemProperty -Path 'HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Policies\\System' -Name 'PLACEHOLDER' -Value 1 -Type DWord -Force",
        "powershell_script": "Set-ItemProperty -Path 'HKLM:\\System\\CurrentControlSet\\Services\\LanManServer\\Parameters' -Name 'autodisconnect' -Value 15 -Type DWord -Force",
        "requires_admin": true,
        "requires_reboot": false
    },
    "implementation_gpo": {
        "inf_section": "[Registry Values]",
        "inf_key": "MACHINE\\System\\CurrentControlSet\\Services\\LanManServer\\Parameters\\autodisconnect",
        "inf_value": "4,15",
        "gpo_xml": "<RegistryValue name='autodisconnect' type='REG_DWORD' value='15'/>"
    },
    "audit_logic": {
        "powershell_script": "$val = (Get-ItemProperty -Path 'HKLM:\\System\\CurrentControlSet\\Services\\LanManServer\\Parameters' -Name 'autodisconnect' -ErrorAction SilentlyContinue).autodisconnect; return ($val -le 15 -and $null -ne $val)",
        "expected_result": true
    },
    "remediation_rollback": {
