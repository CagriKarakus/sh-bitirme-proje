        "gpo_xml": "<RegistryValue name='LegalNoticeCaption' type='REG_SZ' value='Warning'/>"
    },
    "audit_logic": {
        "powershell_script": "$val = (Get-ItemProperty -Path 'HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Policies\\System' -Name 'LegalNoticeCaption' -ErrorAction SilentlyContinue).LegalNoticeCaption; return (-not [string]::IsNullOrWhiteSpace($val))",
        "expected_result": true
    },
    "remediation_rollback": {
